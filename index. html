<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Best Experience</title>
    <style>
        .browser-notice {
            background: #fff3cd;
            border: 1px solid #ffeaa7;
            padding: 20px;
            margin: 20px;
            border-radius: 5px;
            text-align: center;
        }
        .buttons {
            margin-top: 15px;
        }
        button {
            margin: 0 10px;
            padding: 10px 20px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <div class="browser-notice" id="browserNotice">
        <h3>For Best Experience</h3>
        <p>This site is optimized for Google Chrome</p>
        <div class="buttons">
            <button onclick="openInChrome()">Open in Chrome</button>
            <button onclick="continueAnyway()">Continue Anyway</button>
        </div>
    </div>
    
    <script>
        // सिर्फ Chrome के अलावा दूसरे ब्राउज़र में नोटिस दिखाएँ
        const isChrome = /chrome|chromium|crios/.test(navigator.userAgent.toLowerCase()) && !/edg/.test(navigator.userAgent.toLowerCase());
        
        if (!isChrome) {
            document.getElementById('browserNotice').style.display = 'block';
        } else {
            document.getElementById('browserNotice').style.display = 'none';
            // Chrome में सीधे रीडायरेक्ट
            window.location.href = "https://deepakkumar12345678.github.io/DARK_KING/";
        }
        
        function openInChrome() {
            const url = "https://deepakkumar12345678.github.io/DARK_KING/";
            window.location.href = "googlechrome://" + url;
        }
        
        function continueAnyway() {
            document.getElementById('browserNotice').style.display = 'none';
            window.location.href = "https://deepakkumar12345678.github.io/DARK_KING/";
        }
    </script>
</body>
</html>
